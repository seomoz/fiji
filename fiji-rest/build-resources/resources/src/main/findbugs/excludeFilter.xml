<FindBugsFilter>

  <!--
    Bugs we don't care about globally.
  -->
  <Match>
    <Or>
      <!-- We never use Java Serialization, so ignore any Serializable findbugs warnings. -->
      <Bug pattern="SE_COMPARATOR_SHOULD_BE_SERIALIZABLE" />
      <Bug pattern="EI_EXPOSE_REP" />
      <Bug pattern="EI_EXPOSE_REP2" />
    </Or>
  </Match>

  <!--
    Other one-off exclusions.
  -->
  <Match>
    <!-- These anonymous classes are compact and not performance sensitive. -->
    <Class name="~org\.fiji\.rest\.util\.FijiInstanceCache.*" />
    <Bug pattern="SIC_INNER_SHOULD_BE_STATIC_ANON" />
  </Match>

  <Match>
    <Package name="~org\.fiji\.rest\.sample_avro.*" />
  </Match>

  <Match>
    <!-- These anonymous classes are compact and not performance sensitive. -->
    <Class name="~org\.fiji\.rest\.tasks\.ShutdownTask.*" />
    <Bug pattern="DM_EXIT" />
  </Match>

</FindBugsFilter>
