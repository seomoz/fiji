#
#   This script allows developers to run the express script in the development distribution built
#   under the project's target directory. If no built development distribution exists, maven
#   will be used to build one.

bin=$(dirname ${0})

release_dir=$(ls -d -1 "${bin}"/../target/fiji-*-release/fiji-*/ | sort -r | head -1)
if [ ! -d "${release_dir}" ]; then
  echo "No target directory found, so building FijiExpress with 'mvn package' first..."
  mvn package -DskipTests -DskipVerify
  release_dir=$(ls -d -1 "${bin}"/../target/fiji-*-release/fiji-*/ | sort -r | head -1)
fi
release=$(cd ${release_dir} && pwd)

exec ${release}/bin/express "${@}"
