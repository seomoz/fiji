<FindBugsFilter>

  <!--
    Bugs we don't care about globally.
  -->
  <Match>
    <Or>
      <!-- We never use Java Serialization, so ignore any Serializable findbugs warnings. -->
      <Bug pattern="SE_COMPARATOR_SHOULD_BE_SERIALIZABLE" />
      <Bug pattern="EI_EXPOSE_REP" />
      <Bug pattern="EI_EXPOSE_REP2" />
    </Or>
  </Match>
  <!-- Suppress bugs in Avro generated classes. -->
  <Match>
    <Class name="~org[.]fiji[.]mapreduce[.]avro[.]generated[.].*" />
  </Match>
  <Match>
    <!-- Mappers/Reducers/Gatherers/Producers/Tools initialize in setup() so it's okay if their
         constructors don't initialize an instance variable. -->
    <Or>
      <Class name="~org[.]fiji[.]mapreduce[.]bulkimport[.]impl[.].*Mapper" />
      <Class name="~org[.]fiji[.]mapreduce[.]gather[.]impl[.].*Mapper" />
      <Class name="~org[.]fiji[.]mapreduce[.]produce[.]impl[.].*Mapper" />
    </Or>
    <Bug pattern="UWF_FIELD_NOT_INITIALIZED_IN_CONSTRUCTOR" />
  </Match>
  <Match>
    <!-- Command-line flags are initialized with FlagParser.parse(). -->
    <Class name="~org[.]fiji[.]mapreduce[.]tools[.]FijiBulkLoad" />
    <Bug pattern="UWF_NULL_FIELD" />
  </Match>
  <Match>
    <!-- For performance, code returning the same array every time is correct. -->
    <Class name="com.moz.fiji.mapreduce.impl.FijiTableSplit" />
    <Or>
      <Bug pattern="EI_EXPOSE_REP" />
      <Bug pattern="EI_EXPOSE_REP2" />
      <Bug pattern="EQ_DOESNT_OVERRIDE_EQUALS" />
    </Or>
  </Match>
  <Match>
    <!-- Disable the equals check for HFileKeyValue -->
    <Class name="com.moz.fiji.mapreduce.framework.HFileKeyValue" />
    <Bug pattern="EQ_COMPARETO_USE_OBJECT_EQUALS" />
  </Match>
  <Match>
    <Class name="com.moz.fiji.mapreduce.framework.HBaseFijiTableInputFormat$FijiTableRecordReader" />
    <Bug pattern="BC_UNCONFIRMED_CAST" />
  </Match>
  <Match>
    <Or>
      <Class name="com.moz.fiji.mapreduce.framework.ConsistentHostOrderPolicy$1"/>
      <Class name="com.moz.fiji.mapreduce.framework.CassandraSubSplitCombiner$1"/>
    </Or>
    <Bug pattern="SIC_INNER_SHOULD_BE_STATIC_ANON" />
  </Match>
</FindBugsFilter>
